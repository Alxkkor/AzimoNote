<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.labs.azimo.note">

    <application
        android:name="com.example.labs.azimo.note.AzimoNoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.labs.azimo.note.ui.activity.DispatcherActivity"
            android:launchMode="singleTask">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.labs.azimo.note.ui.activity.WelcomeActivity" />
        <activity android:name="com.example.labs.azimo.note.ui.activity.AddNoteActivity" />
        <activity android:name="com.example.labs.azimo.note.ui.activity.LoginActivity" />
        <activity android:name="com.example.labs.azimo.note.ui.activity.NotesActivity" />
        <activity android:name="com.example.labs.azimo.note.ui.activity.RegisterActivity" />

    </application>

</manifest>